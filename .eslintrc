{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node" : true,
    "browser": true,
    "mocha": true
  },

  "plugins": ["react", "import", "mocha"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "max-len": ["error", 120],
    "require-jsdoc": "off",
    "comma-dangle": "off",
    "mocha/no-exclusive-tests": "error",
    "no-console": "off",
    "no-debugger": "off"
  }
}
